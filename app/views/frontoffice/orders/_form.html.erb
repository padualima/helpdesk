<div class="row">
  <!-- Area Chart -->
  <div class="col-xl-12 col-lg-12">
    <div class="card shadow mb-4">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Chamados abertos</h6>
      </div>
      <!-- Card Body -->
      <%= form_with model:([:frontoffice, order])  do |form| %>
      <div class="card-body">
        <div class="row">
          <div class="col-xl-4 col-lg-4 col-md-4">
            <div class="form-group">
              <%= form.label :sector_called_id, "Setor Chamado" %>
              <%= form.select :sector_called_id, @sector_calleds, {}, class: "form-control" %>
            </div>
          </div>
          <div class="col-xl-8 col-lg-8 col-md-8">
            <div class="form-group">
              <%= form.label :title, "Assunto" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-8 col-lg-8 col-md-8">
            <div class="form-group">
              <%= form.label :description, "Observação" %>
              <%= form.text_area :description, class: "form-control" %>
            </div>
          </div>
          <div class="col-xl-4 col-lg-4 col-md-4">
            <div class="form-group">
              <%= form.label :priority , "Urgência"%>
              <%= form.select :priority, @priorities, {} , class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="actions text-center">
          <%= form.submit "Abrir Chamado", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
